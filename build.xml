<?xml version="1.0" encoding="UTF-8"?>
<!-- based on https://github.com/frmwrk123/de.plugins-zum-selberbauen.ultimate/blob/dev/build.xml -->
<project name="com.mrk.wcf.phpoffice.phpexcel" default="build">
	<target name="clean" description="Deletes old tar files.">
		<delete failonerror="false">
			<fileset dir="" includes="*.tar"/>
		</delete>
		
		<delete failonerror="false" dir="build" />
	</target>

	<target name="prepare" depends="clean" description="Prepares the build.">
		<mkdir dir="build" />
	</target>

	<target name="build" depends="prepare" description="Generates the package archive.">
		<tar destfile="files.tar" longfile="gnu">
			<tarfileset dir="files">
				<exclude name="lib/system/api/phpoffice/phpexcel/Documentation/**" />
				<exclude name="/lib/system/api/tcpdf/examples/**" />
			</tarfileset>
		</tar>
		
		<tar destfile="build/com.mrk.wcf.phpoffice.phpexcel.tar">
			<tarfileset dir="">
				<include name="package.xml" />
				<include name="LICENSE" />
				<include name="*.tar" />
			</tarfileset>
		</tar>
	</target>
</project>

